# syntax=docker/dockerfile:1

# Build stage - installs dependencies and builds assets
FROM python:3.11-slim as builder

WORKDIR /app

# Install system dependencies needed for building Python packages (e.g., compiling C extensions)
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Install UV package manager for significantly faster dependency installation compared to pip
RUN pip install --no-cache-dir uv

# Copy requirements file first to leverage Docker layer caching
# This layer will only rebuild when requirements.txt changes, not when application code changes
COPY requirements.txt .

# Use UV to install dependencies in the build environment for faster installation
RUN uv pip install --system --no-cache -r requirements.txt

# Production stage - creates minimal runtime image
FROM python:3.11-slim

WORKDIR /app

# Install only runtime dependencies needed for the application to run
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy Python dependencies from builder stage to keep image size minimal
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code last (changes most frequently)
# This leverages Docker's layer caching: if only application code changes, only this layer rebuilds
COPY . .

# Create non-root user for security best practices
RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

# Make sure scripts in .local are usable by adding them to PATH
ENV PATH=/root/.local/bin:$PATH

# Expose port for the FastAPI application
EXPOSE 8000

# Health check to monitor container status
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run with gunicorn for production, binding to 0.0.0.0 to allow external connections
CMD ["gunicorn", "main:app", "--workers", "4", "--worker-class", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]